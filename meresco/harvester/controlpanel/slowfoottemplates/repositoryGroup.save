<%
group = asform(input)
old_group = lxml.getroot()

newGroup = XML('''<repositoryGroup>
  <id>%(groupId)s</id>
  <name xml:lang="nl">%(nl_name)s</name>
  <name xml:lang="en">%(en_name)s</name>
</repositoryGroup>''' % {
   'groupId': escape_xml2(group.id), 
   'nl_name': escape_xml2(group.nl_name),
   'en_name': escape_xml2(group.en_name),
})
for repositoryId in xpath(old_group, 'repositoryId'):
    newGroup.append(repositoryId)
target(filepath(args.name))
req.write(lxmltostring(newGroup, pretty_print=True, xml_declaration=True))
redirect('/page/repositoryGroup.edit/' + args.name)
%>