<%
domain = asform(input)
old_domain = lxml

target(filepath(domain.id + '.domain'))
%><?xml version="1.0"?>
<domain>
  <id><%escape_xml(domain.id)%></id>
  <description><%escape_xml(domain.description)%></description>
<%
for repositoryGroupId in xpath(old_domain, 'repositoryGroupId'):
  req.write(lxmltostring(repositoryGroupId))
#
for targetId in xpath(old_domain, 'targetId'):
  req.write(lxmltostring(targetId))
#
for mappingId in xpath(old_domain, 'mappingId'):
  req.write(lxmltostring(mappingId))
#
%>
</domain>
<%
redirect('/page/domain.edit/' + domain.id + '.domain')
%>